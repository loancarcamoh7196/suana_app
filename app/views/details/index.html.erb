<%# Page info %>
	<div class="page-top-info">
		<div class="container">
			<h1 class="col-12">Catálogo </h1>
			<div class="site-pagination">
        <%= link_to 'Home'.html_safe, '#' %>
				 /
				<%= link_to 'Cátalogo'.html_safe , '#' %>
			</div>
		</div>
	</div>
<%# Page info end %>

<%# Detail - Index - Catalogo  %>
<div class="container">
  <div class="row">
    
    <%# Buscador pot título %>
    <div class="input-group m-3">
      <div class="header-search-form">
        <input type="text" name="buscador" id="buscador" class="form-control" placeholder="Busqueda por  título">
        <button><i class="flaticon-search"></i></button>                    
      </div>
      <div class="text-muted text-center">Recuerde que el buscador es sensible a Mayúsculas</div>
    </div>   
  </div>
</div>

<%# Cuerpo del Catálogo %>
<section class="category-section spad">
  <div class="container">
    <div class="row">
      <%# Buscador por categoría %>
      <%= render 'shared/asize' %>

      <%# Detalles %>
      <div class="col-lg-9 ">
        <div class="row" id="lista">
          <%= render @details %>
        </div>
      </div>
    </div>
  </div>
</section>      
    
<%# Scritp buscador %>
<script>
  $('#buscador').keyup(function () {
    var searchQuery = $('#buscador').val();
    $.ajax({
      type: "GET",
      url: "<%= details_path %>",
      data: { buscador: searchQuery }
    });
  });
</script>