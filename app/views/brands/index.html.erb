<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Editoriales y Marcas</h2>
      <%= link_to '<i class="fas fa-plus"></i>  Nueva Marca'.html_safe, new_brand_path, remote:true, class: 'btn btn-sm btn-outline-success col-3 btn-block float-right' %>
      <br>
      <div class="table-responsive">
        <table class="table table-fullwidth table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody id="list">
            <%= render @brands %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render 'modal' %>
