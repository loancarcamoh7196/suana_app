<div class="table-responsive">
  <table class="table table-hover" id="list-address" >
    <thead>
      <th>Code</th>
      <th>Producto</th>
      <th>Precio ( <i class="fas fa-coins" style='color: rgb(94.8%, 74.8%, 33.3%);'></i>bc)</th>
      <th>Cantidad</th>
      <th>Fecha de Compra </th>
      <th>Direccion de envío</th>
      <th colspan="2"></th>
    </thead>
    <tbody>
      <% @claims.each do |claim|  %>
        <tr>
          <td> <%= claim.id %> </td>
          <td> <%= claim.gift.name %> </td>
          <td> <%= claim.points %></td>
          <td> <%= claim.quantity %> </td>
          <td> <%= claim.created_at.strftime("%d/%m/%y %I:%M") %> </td>
          <td> <%= "#{claim.address.street} #{claim.address.number_street} <br> #{claim.address.township.name}, #{claim.address.township.region.name.capitalize}".html_safe %> </td>
          <td> <%= link_to 'Boleta', claim_path(claim, format: :pdf), download: true  %> </td>
        </tr>
      <% end %>
      <% if ! @claims.present? %>
        <p id="msj-no-data">No has registrado direcciones para tus envíos</p>
      <% end %>
    </tbody>
  </table>
</div>