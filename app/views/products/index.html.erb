<%# Products - Index - Solo vendedor y/o admin  %>
<div class="container">

  <div class="row ">
    <div class="col-10 col-md-12">
      <h3>Productos</h3>
    </div>
    <div class="col-2 col-md-12">
      <%= link_to '<i class="fas fa-plus"></i> Nuevo Producto'.html_safe, new_product_path, class: 'btn btn-outline-success float-right btn-sm'  %>
    </div>
    <hr>
    <br><br>
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-fullwidth table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Point quantity</th>
                
                <th>Is gift</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody id="lista">
              <%= render @products %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

<%= render 'modal_product' %>

