							<li><%= link_to 'Comentarios', comments_path %></li>
							<li><%= link_to 'Marcas', brands_path %></li>
							<li><%= link_to 'Banner', banners_path %></li>
						</ul>
					</li>
					<li><%= link_to 'Sugerencias', new_suggestion_path %></li>
