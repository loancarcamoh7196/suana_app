<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Registrate</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, 'Nombre Completo' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :rut, 'RUT' %>
          <%= f.text_field :rut, autocomplete: "rut", class: 'form-control' %>
        </div>
        <div class="row">
          <div class="form-group col-2">
            <%= f.label :phone_type, 'Tipo de telefono' %>
            <%= f.text_field :phone_type, class: 'form-control' %>
          </div>
          <div class="form-group col-10">
            <%= f.label :phone_number, 'Nro de  Telefono' %>
            <%= f.text_field :phone_number, autocomplete: "phone", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password , 'Contraseña'%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> mínimo 6 caracteres.)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirme Contraseña:' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              Dirección 
            </h5>
          </div>
        </div>
        <br>
        <div class="form-group">
          <%= f.submit "Registrate", class: 'btn btn-lg btn-block btn-outline-success' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
