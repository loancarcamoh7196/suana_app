<%= link_to '<i class="fas fa-plus"></i> Agregar dirección'.html_safe, new_address_path, remote: true, class: 'btn btn-outline-success float-right' %>
<div class="table-responsive">
  <table class="table table-hover" id="list-address" >
    <thead>
      <th>Calle</th>
      <th> Tipo de Inmueble</th>
      <th>Comuna</th>
      <th>Región</th>
      <th></th>
    </thead>
    <tbody>
      <%= render @addresses %>
      <% if ! @addresses.present? %>
        <tr id="msj-no-data">
          <td>No has registrado direcciones para tus envíos</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'modal' %>