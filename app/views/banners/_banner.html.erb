<tr id="<%= banner.id %>">
  <td><%= banner.id %></td>
  <td><%= banner.title %></td>
  <td><%= banner.description %></td>
  <td><%= banner.actived ? '<span class="badge badge-success">Activo</span>'.html_safe : '<span class="badge badge-danger">Desactivado</span>'.html_safe %></td>
  
  <td>
    <% if can? :show, banner %>
      <%= link_to '<i class="fas fa-info"></i>'.html_safe, banner, remote: true, class: 'btn btn-sm btn-outline-info', title: "Detalle de #{banner.id}"  %>
    <% end %>
  </td>
  <td>
    <% if can? :edit, banner %>
      <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_banner_path(banner), remote: true, class: 'btn btn-sm btn-outline-warning', title: "Editar #{banner.title}" %>
    <% end %>
  </td>
  <td>
    <% if can? :destroy, banner%>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, banner, remote: true, method: :delete, data: { confirm: 'Â¿Estas seguro?' }, class:'btn btn-sm btn-outline-danger' %>
    <% end %>
  </td>
</tr>